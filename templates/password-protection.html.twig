{% extends 'partials/base.html.twig' %}

{% block content %}

<div class="login">

    <h1>{{ pp_config.headline }}</h1>
    <h2>{{ pp_config.description }}</h2>

   <form action="{{ page.header.slug }}" method="post" id="password-protection">
        <fieldset>

            <!-- Password input-->
            <div class="password-div">
                <label for="password">{{ pp_config.password_label }}</label><br/>
                <input id="password" name="password" type="password" placeholder="{{ pp_config.password_placeholder }}" />
            </div>

            <!-- Antispam input-->
            <div class="antispam-div">
                <input id="antispam" name="antispam" type="hidden" placeholder="antispam" />
            </div>

            <!-- Form actions -->
            <div class="buttons">
				<br/>
                <button class="button" type="submit">{{ pp_config.submit_label }}</button>
            </div>

        </fieldset>
    </form>
</div>

{% endblock %}

